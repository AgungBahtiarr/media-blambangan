---
import ListCategories from '@/components/ListCategories'
import ListPosts from '@/components/ListPosts'
import BaseLayout from '@/layouts/BaseLayout'
import { getPosts } from '@/utils'
import Shape from '@/components/icons/Shape'
import Title from '@/components/Title'

const MAX_POSTS = 11 // max number of posts to show on the home page
const posts = await getPosts(MAX_POSTS)

const x = 3
---

<BaseLayout title='Home'>
	<div class='flex justify-start items-center gap-2 title'>
		<Shape />
		<div class='flex flex-col pl-2 gap-2'>
			<!-- BanyuwangiNow.com -->
			<Title>Banyuwangi Now</Title>
			<h2 class='font-semibold text-lg'>Berita terkini aktual dan terpecaya</h2>
		</div>
	</div>

	<ListCategories />

	<div>
		<h2 class='text-lg font-medium tracking-wide text-end'>Latest Posts</h2>
		<ListPosts FirstBig={true} posts={posts} />
	</div>
</BaseLayout>

<script>
	import { animate } from 'motion'
	const showAnimations = localStorage.getItem('animations') === 'true'

	if (showAnimations) {
		animate(
			'.title',
			{ y: [80, 0], opacity: [0, 1] },
			{
				duration: 2.5,
				opacity: { duration: 3 },

				offset: [0, 0.55, 0.75]
			}
		)
	}
</script>
